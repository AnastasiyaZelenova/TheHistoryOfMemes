<Window x:Class="UIOfMemes.AddMemeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UIOfMemes"
        mc:Ignorable="d"
        Title="AddMemeWindow" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            
        </Grid.ColumnDefinitions>
        <InkCanvas Name="inkCanvasPaint"  />
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" Margin="10" Grid.Column="1">
            <Button Name="buttonClear" Content="Clear" FontSize="30" MinHeight="50" MinWidth="70" Click="buttonClear_Click" ></Button>
            <Button Name="buttonSave" Content="Save" FontSize="30" MinHeight="50" MinWidth="70" Click="buttonSave_Click" ></Button>
        </StackPanel>
        

    </Grid>
</Window>
